<?xml version="1.0" encoding="utf-8"?>

<launch>

  <arg name="use_sim_time" value="true"/> <!-- Tells ROS nodes asking for time to get the Gazebo-published simulation time, published over the ROS topic /clock-->

  <!-- Play ROSBAG -->
  <node pkg="rosbag" type="play" name="player" output="screen" args="--loop /home/idac/catkin_ws_project/iDog.bag">
    <param name ="/use_sim_time" value="true"/>
  </node>
  <!-- Add Covariance to the Pose data -->
  <node pkg="elevation_mapping_demos" type="modify_pose_topic.py" name="modify_pose" output="screen"/>
  
  <!-- integration from the IMU values to get the angular position -->
  <node pkg="elevation_mapping_demos" type="angular_position_from_bag.py" name="modify_pose_imu" />

  <!-- Elevation mapping node -->
  <node pkg="elevation_mapping" type="elevation_mapping" name="elevation_mapping" output="screen">
    <rosparam command="load" file="$(find elevation_mapping_demos)/config/robots/IDog_config.yaml" />
  </node>

  </launch>